<h2>User info</h2>
<table class="table">
  <tbody>
    <tr>
      <%= image_tag user.get_profile_image, size: "100x100" %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to edit_user_path(user) do %>
    edit
  <% end %>
</div>