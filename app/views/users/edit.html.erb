<div>
  <div>
    <div>
      <h2>User info</h2>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <%= render "layouts/errors", obj: @user %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_area :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :profile_image, class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>